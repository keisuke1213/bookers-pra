<h1>Books</h1>
<table>
  <thead>
     <tr>
       <th>Title</th>
       <th>Opinion</th>
     </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
