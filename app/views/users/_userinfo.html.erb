<h2>User info</h2>
<table>
  <tr>
    <%= image_tag user.get_profile_image(100,100) %>
  </tr>
  <tr>
    <td>name</td>
    <td>
      <%= user.name %>
    </td>
  </tr>
  <tr>
    <td>introduction</td>
    <td>
      <%= user.introduction %>
    </td>
  </tr>
      <%= link_to "Edit", edit_user_path(user) %>
</table>


<h1>New book</h1>
<%= form_with model: book do |f| %>
<div>
  <%= f.label :Title %><br>
  <%= f.text_field :title, class:"btn-block" %>
</div>
  
<div>
  <%= f.label :Opinion %><br>
  <%= f.text_area :body ,class:"btn-block" %>
</div>


  <%= f.submit 'Create Book' %>

<% end %>